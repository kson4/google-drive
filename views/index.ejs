<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/home.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/661ac17a3d.js"
      crossorigin="anonymous"
    ></script>
    <title>Google Drive</title>
  </head>
  <body>
    <div class="top-nav">
      <div class="top-nav-left">
        <div class="top-nav-logo">
          <img src="/img/google-drive-logo.png" alt="logo" id="home-logo" />
          <p>Drive</p>
        </div>
        <div class="top-nav-search">
          <i class="fa-solid fa-magnifying-glass fa-2xs"></i>
          <input id="home-search" type="text" placeholder="Search in Drive" />
          <i class="fa-solid fa-sliders fa-2xs"></i>
        </div>
      </div>
      <div class="top-nav-right">
        <i class="fa-regular fa-circle-question fa-2xs"></i>
        <i class="fa-solid fa-gear fa-2xs"></i>
        <i class="fa-solid fa-user fa-2xs"></i>
      </div>
    </div>
    <div class="content">
      <div class="side-nav">
        <div class="add-button">
          <i class="fa-solid fa-plus fa-xl"></i>
          <p class="add-button-title">New</p>
        </div>
        <div class="add-button-lists">
          <form action="/index" method="POST">
            <button type="submit" name="document" value="newDocument">
              New File
            </button>
          </form>
          <button class="add-button-list">New Folder</button>
          <button class="add-button-list">File Upload</button>
          <button class="add-button-list">Folder Upload</button>
          <button class="add-button-list">Google Docs</button>
        </div>

        <div class="side-nav-tabs">
          <i class="fa-solid fa-hard-drive fa-xs"></i>
          <p>My Drive</p>
        </div>
        <div class="side-nav-tabs">
          <i class="fa-regular fa-star fa-xs"></i>
          <p>Starred</p>
        </div>
        <div class="side-nav-tabs">
          <i class="fa-regular fa-trash-can fa-xs"></i>
          <p>Trash</p>
        </div>
      </div>
      <div class="main-content">
        <div class="main-content-nav">
          <div>
            <p class="main-content-nav-title">My Drive</p>
          </div>
          <div class="main-content-nav-right">
            <i class="fa-solid fa-list fa-2xs"></i>
            <i class="fa-solid fa-circle-question fa-2xs"></i>
          </div>
        </div>
        <% documents.forEach((document) => { %>
        <div><%= document %></div>
        <% }) %>
      </div>
    </div>
    <script src="/js/home.js"></script>
  </body>
</html>
